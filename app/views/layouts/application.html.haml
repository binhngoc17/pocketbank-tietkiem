!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %link{:href => "img/favicon.png", :rel => "shortcut icon"}/
    %title= content_for?(:title) ? yield(:title) : 'Pocket Bank'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Pocket Bank'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    / HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries
    /[if lt IE 9]
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    %link{:href => "http://fonts.googleapis.com/css?family=Noto+Sans:400,700|Open+Sans|Arimo&subset=latin,vietnamese", :rel => "stylesheet", :type => "text/css"}/

  %body
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
       })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      
      ga('create', 'UA-49997426-1', 'tietkiem.me');
      ga('send', 'pageview');

    %section#container
      / header start
      %header.header
        = render 'layouts/navigation'
      / header end
      / main content start
      %section{:role => "main"}
        = content_for?(:breadcrumbs) ? yield(:breadcrumbs) : ""
        = yield
      / main content end
      / footer start
      = render 'layouts/footer'
      / footer end
    / js placed at the end of the document so the pages load faster
    = javascript_include_tag "application", "data-turbolinks-track" => true
