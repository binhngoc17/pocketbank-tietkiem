%form.form-signin{:action => "index.html"}
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin' }) do |f|
  %h2.form-signin-heading sign in now
  .login-wrap
    = f.input_field :email, :autofocus => true, :placeholder => "Email", :class=> "form-control"
    = f.input_field :password, :autofocus => true, :placeholder => "Password", :class=> "form-control"

    %label.checkbox
      = f.input_field :remember_me, :as => :boolean, :boolean_style => :inline if devise_mapping.rememberable?
      Remember me
      %span.pull-right
        %a{"data-toggle" => "modal", :href => "#myModal"} Forgot Password?
    = f.button :submit, "Sign in", :class => 'btn btn-lg btn-login btn-block'
/ Modal
#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title Forgot Password ?
      .modal-body
        %p Enter your e-mail address below to reset your password.
        %input.form-control.placeholder-no-fix{:autocomplete => "off", :name => "recover_email", :placeholder => "Email", :type => "text"}/
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
        %button.btn.btn-success{:type => "button"} Submit
/ modal
